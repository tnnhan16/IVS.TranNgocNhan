@model IVS.Models.Model.CategoryViewModel

@{
    ViewBag.Title = "Category View";
}

<div class="headerTitle">
    <ul class="crumbs2">
        <li>@Html.ActionLink("Home", "Index", "Home", null, new { })</li>
        <li>@Html.ActionLink("Category", "Index", "Category", null, new { })</li>
        <li>Preview</li>
    </ul>
</div>

@if (!String.IsNullOrEmpty((string)TempData["Success"]))
{
    <div id="success" class="success">
        @TempData["Success"]
    </div>
}
@if (!String.IsNullOrEmpty((string)TempData["Error"]))
{
    <div id="error" class="error">
        @TempData["Error"]
    </div>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <div class="lblRequirement">* Indicates required fields</div>
    <table class="form-horizontal inputForm">
        <colgroup>
            <col class="col-md-1" />
            <col class="col-md-6" />
            <col />
        </colgroup>
        <tbody>
            <tr>
                <td class="pull-right">
                    @Resources.Resource.Category_lblCode
                    <label class="lblRequirement">*</label>
                </td>
                <td>
                    @Html.EditorFor(model => model.code, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </td>
            </tr>
            <tr>
                <td class="pull-right">
                    @Resources.Resource.Category_lblName
                    <label class="lblRequirement">*</label>
                </td>
                <td>
                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </td>
            </tr>
            <tr>
                <td class="pull-right">
                    @Resources.Resource.Category_lblParent_Name
                </td>
                <td>
                  @Html.EditorFor(model => model.parent_name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </td>
            </tr>
            <tr>
                <td class="pull-right">
                    @Resources.Resource.Category_lblDescription
                </td>
                <td>
                    @Html.TextAreaFor(m => m.description, new { @class = "form-control input-sm", maxlength = "256", @style = "height: 125px;", @readonly = "readonly" })
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    @Html.ActionLink("Back to List", "Index", "Category", new { }, new { @class = "btn btn-sm btn-default" })
                    @Html.ActionLink("Edit", "Edit", "Category", new { @id = @Model.id }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        </tbody>
    </table>

}
